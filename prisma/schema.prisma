generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma-nestjs"
  output   = "../src/type-graphql"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id
  name        String
  surname     String
  email       String    @unique
  phoneNumber String?
  photoUrl    String?
  password    String
  created_at  DateTime  @default(now())
  updated_at  DateTime? @default(now())

  @@map("users")
}
